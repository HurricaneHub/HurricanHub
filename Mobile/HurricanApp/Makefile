.PHONY: install android ios web start audit

# Install all project dependencies
install:
    npm install

# Run the project on an Android device/emulator
android:
    npm run android

# Run the project on an iOS device/simulator (requires macOS)
ios:
    npm run ios

# Run the project in a web browser
web:
    npm run web

# Start the Expo development server
start:
    expo start

# Run npm audit to check for vulnerabilities
audit:
    npm audit